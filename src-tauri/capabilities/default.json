{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "com.rusty-pen.default",
  "description": "enables: default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-unmaximize",
    "core:window:allow-start-dragging",
    "shell:allow-open",
    "shell:default",
    "dialog:allow-save",
    "dialog:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-has",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$APPDATA/rusty-pen-articles" },
        { "path": "$APPDATA/rusty-pen-articles/*" }
      ]
    }
  ]
}
